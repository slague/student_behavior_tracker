<h1>Name: <%= @student.name %></h1>
<h4>Teacher: <%= @student.classroom.teacher %></h4><br>

<% target_behaviors = @student.student_target_behaviors.map { |tb| @behaviors.find(tb.behavior_id).keyword } %>
<% target_behavior_descrptions = @student.student_target_behaviors.map { |tb| tb.student_specific_description } %>


<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">TARGET BEHAVIOR 1:
      <% target_behaviors.each do |behavior| %>
    <%= behavior %>
    <% end %></h3>
  </div>
  <div class="panel-body">
    <% target_behavior_descrptions.each do |description| %>
    <%= description %>
    <% end %>
  </div>
</div>



<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">TARGET BEHAVIOR 2</h3>
  </div>
  <div class="panel-body">
    Description of the behavior specific to the student
  </div>
</div>





<h3>Record behavior <%= button_to "New observation", new_classroom_student_observation_path(@classroom, @student), class: "btn btn-warning" %></h3>
